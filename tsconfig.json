{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "jsxFactory": "tsx",
        "lib": ["ES2020", "DOM"],
        "module": "amd",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2020"
    },
    "include": ["./app/*"],
    "exclude": ["node_modules"]
}
